    eval `dircolors -b`
fi
if [ $OS = "Linux" ]; then
#    alias ls='ls --color=auto -h'
    alias ls='ls --color=auto'
elif [ $OS = "Darwin" ]; then
    alias ls='ls -G'
fi



# Cute shell shortcuts
